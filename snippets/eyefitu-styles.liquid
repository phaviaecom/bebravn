[data-eyefitu-widget] {
   display: inline-flex;
   align-items: center;
}
[data-eyefitu-widget] button {
   font-size: 0.9em !important;
}

.eyefitu-button {
     background: #1e4274 !important;
     color: #ffffff !important;
     letter-spacing: 0.3em !important;
     text-transform: uppercase !important;
     font-weight: bold !important;
     font-size: 13px !important;
}
.eyefitu-select-size-button {
    background: #7ad1fe !important;
    border: #7ad1fe  !important;
}

.eyefitu-size-chart-button {
    padding-left: 12px !important;
}

@media (max-width: 640px) {
    .eyefitu-button-secondary {
          margin-top: 12px !important;
    }
}

.eyefitu-toggle {
     background: #1e4274 !important;
}
.eyefitu-size-recommendation-button {
     display: inline-flex !important;
     margin-left: 12px;
     text-transform: none;
     font-weight: 400;
     font-size: 0.8em;
     letter-spacing: .05em;
     padding-top: 0px !important;
     padding-bottom: 0px !important;
     padding: 0px !important;
     margin-bottom: 5px;
}

.eyefitu-size-recommendation-button-logo {
    width: 20px !important;
    height: 10px !important;
    margin-right: 6px !important;
}

.eyefitu-size-recommendation-button-text {
     border-bottom: 1px solid !important;
     border-bottom-color: #d9d9d9 !important;
     border-collapse: separate !important;
     border-spacing: 2px !important;
}

.eyefitu-size-recommendation-button-text:after {
    display: block;
    content: '';
    border-bottom: solid 2px #000000;  
    transform: scaleX(0);  
    transition: transform 600ms ease-in-out;
    transform-origin: 0% 50%;
}

.eyefitu-size-recommendation-button-text:hover:after {
    transform: scaleX(1); transform-origin:   0% 50%;
}
